{
  "name": "mani-lab",
  "build": {
    "dockerfile": "../dockerfiles/codespace/Dockerfile"
  },

  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "forwardPorts": [8888],

  "postCreateCommand": "python3 -m pip list",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-renderers"
      ],
      "settings": {
        "chat.agent.enabled": false,
        "chat.disableAIFeatures": true,

        "github.copilot.chat.enabled": false,
        "github.copilot.enable": { "*": false },
        "github.copilot.inlineSuggest.enable": false,
        "github.copilot-nightly-enable": { "*": false },
        "githubPullRequests.codingAgent.codeLens": false,

        "python.defaultInterpreterPath": "/usr/local/bin/python3",
        "jupyter.kernels.filter": [
          {
            "path": "/usr/local/bin/python3",
            "type": "pythonEnvironment"
          }
        ],

        "terminal.integrated.tabs.enabled": false,
        "terminal.integrated.tabs.hideCondition": "always",
        "workbench.panel.defaultLocation": "bottom",

        "files.exclude": {
          "**/.devcontainer": true
        }
      }
    }
  }
}
